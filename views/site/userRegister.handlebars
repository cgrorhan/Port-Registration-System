<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Kullanıcı Kayıt</title>

  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
 
  <!-- Custom styles for this template-->


</head>
<body id="page-top">
 <div id="wrapper">


    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        
        <!-- End of Topbar -->
        <div class="container">

          <!-- Outer Row -->
          <div class="row justify-content-center">
      
            <div class="col-xl-10 col-lg-12 col-md-9">
      
              <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                  <!-- Nested Row within Card Body -->
                  <div class="row">
                   
                    <div class="col-lg-12">
                      <div class="p-5">
                        <div>
                          <h1 class="h4 text-gray-900 mb-4">Kullanıcı Kayıt</h1>
                        </div>
                        <form method="POST">
                          <div class="form-group">
                            <label for="email"><b>Email</b></label>
                            <input type="email" class="form-control form-control-user" id="email" name="email" placeholder="Mailiniz" required>
                          </div>
                          <div class="form-group">
                            <label for="name"><b>Ad</b></label>
                            <input type="text" class="form-control form-control-user" id="name" name="name" placeholder="Adınız" required>
                          </div>
                          <div class="form-group">
                            <label for="surname"><b>Soyad</b></label>
                            <input type="text" class="form-control form-control-user" id="surname" name="surname" placeholder="Soyadınız" required>
                          </div>
                          <div class="form-group">
                            <label for="psw"><b>Şifre</b></label>
                            <input type="password" class="form-control form-control-user" id="psw" name="psw" placeholder="Şifreniz" required>
                          </div>
                          <div class="form-group">
                            <label for="psw_repeat"><b>Şifreyi tekrar giriniz</b></label>
                            <input type="password" class="form-control form-control-user" id="psw_repeat" name="psw_repeat" placeholder="Tekrar Şifre" required>
                          </div>
                          <div class="form-group">
                            <label for="authorize"><b>Yetki Derecesini Seçiniz</b></label>
                            <select id="authorize" name="authorize" class="form-control form-control-user">
                                <option value="admin">Admin</option>
                                <option value="user">User</option>
                              </select>
                          </div>
                          <div class="form-group">
                          
                          </div>
                           <button type="submit" class="btn btn-primary btn-user btn-block">Kaydet</button>
                          <hr>
                          
                      </div>
                    </div>
                  </div>
                </div>
              </div>
      
            </div>
      
          </div>
      
        </div>
      </div>
      <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>
</body>
</html>